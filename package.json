{
  "name": "nuxt-toastify-plus",
  "version": "1.0.1",
  "description": "Advanced toast notifications for Nuxt (Nuxt 3/4) with Tailwind CSS and Nuxt Icon",
  "license": "MIT",
  "author": "Nizam Omer (nizaamomer) - https://www.nizaamomer.com",
  "homepage": "https://github.com/nizaamomer/nuxt-toastify-plus#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nizaamomer/nuxt-toastify-plus.git"
  },
  "bugs": {
    "url": "https://github.com/nizaamomer/nuxt-toastify-plus/issues"
  },
  "keywords": [
    "nuxt",
    "nuxt-module",
    "nuxt3",
    "nuxt4",
    "toast",
    "toasts",
    "notifications",
    "tailwindcss",
    "nuxt-icon",
    "vue"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "npm run dev:prepare && nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "lint": "eslint .",
    "release": "npm run prepack && npm publish"
  },
  "dependencies": {
    "@nuxt/icon": "^1.15.0",
    "@nuxt/kit": "^4.2.1",
    "@nuxtjs/tailwindcss": "^6.14.0"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.79",
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/eslint-config": "^1.11.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.1",
    "@types/node": "latest",
    "eslint": "^9.39.1",
    "nuxt": "^4.2.1",
    "typescript": "~5.9.3",
    "vue-tsc": "^3.1.7"
  }
}
